{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    },
    "Console": {
      "IncludeScopes": false
    },
    "File": {
      "Path": "logs/midpot-api-{Date}.log",
      "MinLevel": "Information",
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 10,
      "RollingInterval": "Day"
    }
  },
  "ConnectionStrings": {
    "PostgreConnection": "Host=${DB_HOST:localhost};Port=${DB_PORT:5432};Database=${DB_NAME:socialdb};Username=${DB_USER:postgres};Password=${DB_PASSWORD};Pooling=true;MinPoolSize=10;MaxPoolSize=100;ConnectionLifetime=0;CommandTimeout=30;"
  },
  "DistanceLimit": "${DISTANCE_LIMIT:100}",
  "FCM": {
    "SenderId": "${FCM_SENDER_ID}",
    "ServerKey": "${FCM_SERVER_KEY}"
  },
  "Tokens": {
    "Key": "${JWT_KEY}",
    "Lifetime": "${JWT_LIFETIME:48}",
    "RefreshTokenLifetime": "${JWT_REFRESH_LIFETIME:360}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}"
  },
  "Security": {
    "Key": "${SECURITY_KEY}"
  },
  "AzureBlobStorage": "${AZURE_BLOB_STORAGE}",
  "AllowedHosts": "*",
  "Redis": {
    "ConnectionString": "${REDIS_HOST:localhost}:${REDIS_PORT:6379},abortConnect=false,connectTimeout=5000,ssl=false",
    "DefaultExpiryMinutes": "${REDIS_DEFAULT_EXPIRY:60}",
    "UserProfileExpiryMinutes": "${REDIS_USER_PROFILE_EXPIRY:120}",
    "MatchResultsExpiryMinutes": "${REDIS_MATCH_EXPIRY:30}",
    "LocationDataExpiryMinutes": "${REDIS_LOCATION_EXPIRY:15}"
  },
  "SMS": {
    "SmsServiceUrl": "${SMS_SERVICE_URL}",
    "UserId": "${SMS_USER_ID}",
    "Password": "${SMS_PASSWORD}",
    "Sender": "${SMS_SENDER}"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:80"
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 100,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 52428800,
      "RequestHeadersTimeout": "00:00:30"
    }
  }
}