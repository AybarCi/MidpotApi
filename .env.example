# Midpot API Production Environment Variables
# Copy this file to .env and update values for your environment

# Docker Image Configuration
# Use GitHub Container Registry image (default) or specify custom registry
DOCKER_IMAGE=ghcr.io/aybarci/midpotapi:latest
# For specific version: ghcr.io/aybarci/midpotapi:develop
# For local build: comment out DOCKER_IMAGE and uncomment 'build' in docker-compose.yml

# PostgreSQL Database Configuration
# External PostgreSQL Server at 172.17.0.9
# Update these credentials to match your external database server
POSTGRES_DB=socialdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here_change_this_in_production

# JWT Configuration
JWT_KEY=your_super_secure_jwt_key_here_at_least_64_characters_long_with_special_chars_and_numbers_1234567890
JWT_ISSUER=https://www.midpot.net
JWT_AUDIENCE=https://www.midpot.net
JWT_LIFETIME=48
JWT_REFRESH_LIFETIME=360

# Azure Blob Storage (Optional - update with your credentials)
AZURE_BLOB_STORAGE=DefaultEndpointsProtocol=https;AccountName=your_account_name;AccountKey=your_account_key;EndpointSuffix=core.windows.net

# FCM Configuration (Optional - update with your credentials)
FCM_SENDER_ID=your_fcm_sender_id
FCM_SERVER_KEY=your_fcm_server_key_here

# SMS Service Configuration (Optional - update with your credentials)
SMS_SERVICE_URL=https://api.vatansms.net/api/v1/1toN
SMS_USER_ID=your_sms_user_id
SMS_PASSWORD=your_sms_password
SMS_SENDER=YourName

# Security Configuration
SECURITY_KEY=your_security_key_here_for_encryption_and_other_security_purposes
DISTANCE_LIMIT=100

# Redis Configuration
REDIS_DEFAULT_EXPIRY=60
REDIS_USER_PROFILE_EXPIRY=120
REDIS_MATCH_EXPIRY=30
REDIS_LOCATION_EXPIRY=15

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80

# Database Migrations (optional - set to 'true' to run migrations on startup)
RUN_MIGRATIONS=false